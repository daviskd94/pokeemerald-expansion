script NorthCampus_TalkToTracie {
    fadeoutbgm(0)
    setspeaker(SP_NAME_TRACIE)
    msgbox(format("…\pTake a good look, {PLAYER}…\p{COLOR GREEN}Main Hall{COLOR DARK_GRAY} sure does hit different when you know it's your final year.\p We've had a lot of great memories in here.\pAnd… okay, maybe a few\ncatastrophes too.\pWe never did find out what happened to the guy with the Mareep and the lotion…"))
    closemessage
    applymovement(OBJ_EVENT_ID_PLAYER, moves(face_left))
    applymovement(LOCALID_TRACIE_ENTERING_MAIN_HALL, moves(face_right))
    waitmovement(0)
    msgbox(format("But, enough about that.\nC'mon, {PLAYER}.\pLet's head inside before I start getting all mushy."))
    closemessage
    applymovement(OBJ_EVENT_ID_PLAYER, moves(walk_up))
    applymovement(LOCALID_TRACIE_ENTERING_MAIN_HALL, moves(walk_right))
    opendoor(46, 16)
    waitdooranim
    applymovement(OBJ_EVENT_ID_PLAYER, moves(walk_up))
    applymovement(LOCALID_TRACIE_ENTERING_MAIN_HALL, moves(walk_up))
    waitmovement(0)
    hideobjectat(OBJ_EVENT_ID_PLAYER, MAP_NORTH_CAMPUS)
    applymovement(LOCALID_TRACIE_ENTERING_MAIN_HALL, moves(walk_up))
    waitmovement(0)
    hideobjectat(LOCALID_TRACIE_ENTERING_MAIN_HALL, MAP_NORTH_CAMPUS)
    closedoor(46, 16)
    waitdooranim
    special(SpawnCameraObject)
    setobjectxyperm(LOCALID_CAMERA, 42, 16)
    delay(60)
    applymovement(LOCALID_CAMERA, moves(walk_slow_up*6))
    waitmovement(0)
    delay(120)
    setvar(VAR_NORTH_CAMPUS_STATE, 1)
    setflag(FLAG_NORTH_CAMPUS_TRACIE_1)
    playbgm (MUS_OCEANIC_MUSEUM, TRUE)
    warp(MAP_NORTH_CAMPUS_MAIN_HALL, 37, 34)
    waitstate
    releaseall
    end
}

